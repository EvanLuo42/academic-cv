---
import Profile from "./Profile.astro";
import {Content as AboutMe} from "../posts/about/about-me.md"
import {Content as Interests} from "../posts/about/interests.md"
import Prose from "./Prose.astro";
import education from "../posts/about/education.yml"
import EducationEntry, { type Education } from "./EducationEntry.astro";
---

<div class="flex flex-col items-center space-y-5 lg:items-start lg:flex-row justify-center">
  <Profile/>
  <div class="space-y-5 lg:w-[620px] xl:w-[820px] mx-5">
    <div class="w-full text-2xl font-normal">
      <Prose>
        <AboutMe></AboutMe>
      </Prose>
    </div>
    <div class="flex flex-col space-y-5 lg:flex-row lg:space-x-10">
      <div>
        <h3 class="font-bold text-3xl">Interest</h3>
        <Prose>
          <Interests></Interests>
        </Prose>
      </div>
      <div>
        <h3 class="font-bold text-3xl mb-4">Education</h3>
        {
          education.education.map(({degree, major, duration, school}: Education) =>
            <EducationEntry degree={degree} major={major} duration={duration} school={school} />
          )
        }
      </div>
    </div>
  </div>
</div>