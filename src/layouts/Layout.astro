---
import "../styles/global.css"
import "@fortawesome/fontawesome-svg-core/styles.css"

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#1565c0"/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Evan Luo</title>
	</head>
	<body>
    <Header/>
    <main class="mt-12 lg:mt-[70px] dark:bg-[#282a36]">
      <slot />
    </main>
		<Footer/>
	</body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>

<script>
  import {config, dom, library} from "@fortawesome/fontawesome-svg-core";
  import {faBars, faEnvelope, faGraduationCap, faMoon} from "@fortawesome/free-solid-svg-icons";
	import {
		faBluesky,
		faCreativeCommons,
		faCreativeCommonsBy, faCreativeCommonsNc, faCreativeCommonsNd,
		faGithub,
		faLinkedin,
		faOrcid
	} from "@fortawesome/free-brands-svg-icons";

  config.autoAddCss = false
  library.add(
    faGraduationCap,
    faMoon,
    faLinkedin,
    faBluesky,
    faGithub,
    faEnvelope,
    faOrcid,
    faBars,
		faCreativeCommons,
		faCreativeCommonsBy,
		faCreativeCommonsNc,
		faCreativeCommonsNd
  )
  dom.watch()
</script>
